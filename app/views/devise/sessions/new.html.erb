<div class="p-10 xs:p-0 mx-auto md:w-full md:max-w-md">
  <div class="bg-white shadow w-full rounded-lg divide-y divide-gray-200">
    <div class="px-5 py-7">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div>
          <%= f.label :email, class:"font-semibold text-sm text-gray-600 pb-1 block" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" %>
        </div>
        <div>
          <%= f.label :password, class:"font-semibold text-sm text-gray-600 pb-1 block" %>
          <%= f.password_field :password, autocomplete: "current-password", class:"border rounded-lg px-3 py-2 mt-1 mb-5 text-sm w-full" %>
        </div>
        <button type="submit" class="transition duration-200 bg-blue-500 hover:bg-blue-600 focus:bg-blue-700 focus:shadow-sm focus:ring-4 focus:ring-blue-500 focus:ring-opacity-50 text-white w-full py-2.5 rounded-lg text-sm shadow-sm hover:shadow-md font-semibold text-center inline-block">
          <span class="inline-block mr-2">Login</span>
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" class="w-4 h-4 inline-block">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </button>
      <% end %>
    </div>
    <div class="p-3">
      <%= link_to "Forgot your password?", new_password_path(resource_name),class:"text-sm ml-2 hover:text-blue-500 cursor-pointer hover:-translate-y-1 duration-500 transition-all" %><br />
    </div>
  </div>
</div>